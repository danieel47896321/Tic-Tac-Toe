<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Turn"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:padding="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPlayerX"
            style="@style/TextViewPlayer"
            android:text="@string/PlayerX" />

        <TextView
            android:id="@+id/textViewPlayerO"
            style="@style/TextViewPlayer"
            android:text="@string/PlayerO"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTurn">

        <LinearLayout style="@style/LinearLayoutRow">

            <Button
                android:id="@+id/a0"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/a1"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/a2"
                style="@style/ButtonCol" />
        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout style="@style/LinearLayoutRow">

            <Button
                android:id="@+id/b0"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/b1"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/b2"
                style="@style/ButtonCol" />
        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout style="@style/LinearLayoutRow">

            <Button
                android:id="@+id/c0"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/c1"
                style="@style/ButtonCol" />

            <View style="@style/VerticalLine" />

            <Button
                android:id="@+id/c2"
                style="@style/ButtonCol" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>