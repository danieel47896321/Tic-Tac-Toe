<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearLayoutRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="ImageViewCol">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:onClick">buttonClicked</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="title">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextInputLayout_Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>
    <style name="TextInputEditText_Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:itemBackground">@color/black</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Button_Style" >
        <item name="cardCornerRadius">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="VerticalLine">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/grey</item>
    </style>
</resources>